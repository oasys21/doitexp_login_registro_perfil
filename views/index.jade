extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-0
				h1.text-center.login-title Ingrese Sus Datos
					div.account-wall
						img(class='profile-img', src='./oasyslogo.jpg?sz=120')
						form(class='form-signin', action='/login', method='POST')
							input(type='text', name='username' class='form-control', placeholder='Nombre Usuario/Email',required, autofocus)
							input(type='password', name='password' class='form-control', placeholder='Contrase√±a (Min.8/Ab@123)', required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Enviar Datos
							span.clearfix
					a(href='/signup', class='text-center new-account') Registrese
					#message
					if message
						h1.text-center.error-message #{message}
