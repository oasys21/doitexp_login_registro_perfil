extends layout

block content
	div.container
		div.row
			div.col-sm-4.col-md-4.col-md-offset-2
				h1.text-center.login-title Registro de Usuario
					div.signup-wall
						form(class='form-signin', action='/signup', method='POST')
							input(type='text', name='username', class='form-control', placeholder='Usuario',required, autofocus)
							input(type='password', name='password', class='form-control nomargin', placeholder='Contraseña', required)
							input(type='email', name='email', class='form-control', placeholder='Email',required)
							input(type='text', name='names', class='form-control', placeholder='Nombres',required)
							input(type='text', name='surnames', class='form-control', placeholder='Apellidos',required)
							input(type='date', name='born', class='form-control', placeholder='Nacido el',required)
							input(type='text', name='sex', class='form-control', placeholder='Sexo',required)
							input(type='text', name='street', class='form-control', placeholder='Dirección',required)
							input(type='text', name='distrit', class='form-control', placeholder='Comuna',required)
							input(type='text', name='city', class='form-control', placeholder='Ciudad',required)
							input(type='number', name='code', class='form-control', placeholder='Area',required)
							input(type='number', name='number', class='form-control', placeholder='Número',required)
							br
							button(class='btn btn-lg btn-primary btn-block', type='submit') Enviar Registro
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}
